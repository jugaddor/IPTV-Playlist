.github/workflows/update.yml
name: Update IPTV Playlist  # Название workflow

on:
  schedule:
    # Автоматический запуск каждый день в 00:00 (UTC)
    - cron: '0 0 * * *'
  
  workflow_dispatch:  # Разрешает ручной запуск через кнопку

jobs:
  update-playlist:
    runs-on: ubuntu-latest  # Используем свежий Ubuntu

    steps:
      # Шаг 1: Копируем репозиторий
      - name: Checkout code
        uses: actions/checkout@v4

      # Шаг 2: Устанавливаем Python
      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.10'

      # Шаг 3: Запускаем скрипт обновления
      - name: Run update script
        run: |
          pip install requests  # Устанавливаем зависимости
          python update.py      # Запускаем наш скрипт

      # Шаг 4: Пушим изменения обратно в репозиторий
      - name: Commit and push
        run: |
          git config --global user.name "GitHub Bot"
          git config --global user.email "actions@github.com"
          git add playlist.m3u
          git commit -m "Auto-update playlist $(date +'%Y-%m-%d')"
          git push
